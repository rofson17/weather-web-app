<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    {{>header}}
  </head>
  <body>
      {{>navbar}}
      <!-- main header -->
      <div class="container-fluid main_header">
        <div class="row">
          <div class="col-md-10 col-12 mx-auto">
            <div class="row">
              <!-- left div -->
              <div class="col-md-6 col-12 main_header_left">
                <p>Welcome to Weather app</p>
                <h1>Get the Latest <span class="weather_txt">Weather</span> Info of Your City</h1>
                <a href="/weather"><button><i class="fa fa-cloud"></i> Cheak now</button></a>
              </div>
              <!-- right div -->
              <div class="col-md-6 col-12 main_header_right">

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class=" w-100" src="./images/clock.svg" alt="clock slide">
                    </div>
                    <div class="carousel-item">
                      <img class=" w-100" src="./images/phone.svg" alt="Phone slide">
                    </div>
                    <div class="carousel-item">
                      <img class=" w-100" src="./images/weather.svg" alt="weather slider">
                    </div>
                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- main footer -->
      {{>footer}}
    </body>
    </html>
